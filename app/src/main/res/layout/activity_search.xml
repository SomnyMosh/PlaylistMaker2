<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/searchArrowBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="28dp"
        android:paddingStart="@dimen/settings_padding_start"
        android:paddingTop="14dp"
        android:text="@string/button_search"
        android:textColor="@color/settings_text"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/arrow_back_icon"
        android:fontFamily="@font/ys_display_medium"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <android.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/searchview_background"
            android:closeIcon="@drawable/close_icon"
            android:iconifiedByDefault="false"
            android:inputType="text"
            android:queryBackground="@color/transparent"
            android:queryHint="@string/button_search"
            android:searchHintIcon="@drawable/search_icon"
            android:searchIcon="@drawable/search_icon"
            app:showAsAction="always" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/track_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/history_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_history"
            android:gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="19sp"
            android:textColor="@color/settings_text" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/clear_button"
            android:text="@string/clear_history"
            style="@style/SearchMessageButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/results_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="109dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/results_error_icon" />

        <TextView
            style="@style/SearchMessage"
            android:id="@+id/textView"
            android:text="@string/no_results"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_internet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="109dp" />

        <ImageView
            android:id="@+id/no_internet_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/internet_error_icon" />

        <TextView
            style="@style/SearchMessage"
            android:id="@+id/no_internet_text1"
            android:text="@string/no_connection"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/no_internet_text2"
            android:text="@string/please_check"
            android:paddingHorizontal="16dp"
            style="@style/SearchMessage"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <Button
            android:id="@+id/refresh_button"
            android:text="@string/refresh"
            style="@style/SearchMessageButton"/>

    </LinearLayout>

</LinearLayout>