<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/settings_background"
    tools:context=".SettingsActivity">


    <TextView
        android:id="@+id/searchArrowBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="28dp"
        android:paddingStart="@dimen/settings_padding_start"
        android:paddingTop="14dp"
        android:text="@string/button_search"
        android:textColor="@color/settings_text"
        android:textSize="26sp"
        app:drawableStartCompat="@drawable/arrow_back_icon"
        android:fontFamily="@font/ys_display_medium"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <android.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchview_background"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/transparent"
        android:queryHint="@string/button_search"
        android:searchHintIcon="@drawable/search_icon"
        android:searchIcon="@drawable/search_icon"
        android:inputType="text"/>

</LinearLayout>